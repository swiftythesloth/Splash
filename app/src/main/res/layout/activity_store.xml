<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/store_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/colourBackground"
              android:gravity="top|center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/store_back"
            style="@style/game_options"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_back"/>

        <LinearLayout
            android:id="@+id/store_purchase_coins"
            style="@style/store_total_coins"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/store_number_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_white_1000"/>

            <TextView
                android:layout_width="@dimen/store_coins_plus_size"
                android:layout_height="@dimen/store_coins_plus_size"
                android:background="@drawable/store_purchase_coins"
                android:layout_marginLeft="@dimen/store_coins_plus_margin"
                android:textColor="@color/md_white_1000"
                android:text="@string/store_coins_plus"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>

    <View
        style="@style/divider_across"
        android:layout_margin="0dp"/>

    <ScrollView
        android:id="@+id/store_secondary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colourBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/store_group_title"
                android:text="@string/store_powerups_title"/>

            <View
                style="@style/divider_across"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/game_powerup_icon_dimensions"
                            android:layout_height="@dimen/game_powerup_icon_dimensions"
                            android:src="@drawable/ic_destroyer"/>

                        <TextView
                            android:id="@+id/store_number_destroyer"
                            style="@style/store_number_powerups"/>

                    </LinearLayout>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_5_destroyers"/>

                    <TextView
                        android:id="@+id/store_purchase_destroyer"
                        style="@style/store_purchase"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/game_powerup_icon_dimensions"
                            android:layout_height="@dimen/game_powerup_icon_dimensions"
                            android:src="@drawable/ic_undo"/>

                        <TextView
                            android:id="@+id/store_number_undo"
                            style="@style/store_number_powerups"/>

                    </LinearLayout>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_5_undos"/>

                    <TextView
                        android:id="@+id/store_purchase_undo"
                        style="@style/store_purchase"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/game_powerup_icon_dimensions"
                            android:layout_height="@dimen/game_powerup_icon_dimensions"
                            android:src="@drawable/ic_stop_time"/>

                        <TextView
                            android:id="@+id/store_number_stop_time"
                            style="@style/store_number_powerups"/>

                    </LinearLayout>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_5_time_stops"/>

                    <TextView
                        android:id="@+id/store_purchase_stop_time"
                        style="@style/store_purchase"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/divider_across"/>

            <TextView
                style="@style/store_group_title"
                android:text="@string/store_grid_shapes_title"/>

            <View
                style="@style/divider_across"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/store_grid_shape_normal"
                        android:layout_width="@dimen/store_purchase_grid_shape_dimensions"
                        android:layout_height="@dimen/store_purchase_grid_shape_dimensions"
                        android:background="@drawable/game_square_normal"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_normal"/>

                    <TextView
                        android:id="@+id/store_purchase_grid_shape_normal"
                        style="@style/store_purchase"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/store_grid_shape_angular"
                        android:layout_width="@dimen/store_purchase_grid_shape_dimensions"
                        android:layout_height="@dimen/store_purchase_grid_shape_dimensions"
                        android:background="@drawable/game_square_sharp"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_sharp"/>

                    <TextView
                        android:id="@+id/store_purchase_grid_shape_angular_small"
                        style="@style/store_purchase"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/store_grid_shape_circle"
                        android:layout_width="@dimen/store_purchase_grid_shape_dimensions"
                        android:layout_height="@dimen/store_purchase_grid_shape_dimensions"
                        android:background="@drawable/game_square_circle"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_circle"/>

                    <TextView
                        android:id="@+id/store_purchase_grid_shape_circle"
                        style="@style/store_purchase"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/divider_across"/>

            <TextView
                style="@style/store_group_title"
                android:text="@string/store_colour_themes_title"/>

            <View
                style="@style/divider_across"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <GridLayout
                        android:id="@+id/store_theme_vanilla_grid"
                        android:layout_width="@dimen/store_purchase_theme_dimensions"
                        android:layout_height="@dimen/store_purchase_theme_dimensions"
                        android:columnCount="3"
                        android:rowCount="3"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_theme_vanilla"/>

                    <TextView
                        android:id="@+id/store_purchase_theme_normal"
                        style="@style/store_purchase"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <GridLayout
                        android:id="@+id/store_theme_retro_grid"
                        android:layout_width="@dimen/store_purchase_theme_dimensions"
                        android:layout_height="@dimen/store_purchase_theme_dimensions"
                        android:columnCount="3"
                        android:rowCount="3"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_theme_retro"/>

                    <TextView
                        android:id="@+id/store_purchase_theme_retro"
                        style="@style/store_purchase"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <GridLayout
                        android:id="@+id/store_theme_autumn_grid"
                        android:layout_width="@dimen/store_purchase_theme_dimensions"
                        android:layout_height="@dimen/store_purchase_theme_dimensions"
                        android:columnCount="3"
                        android:rowCount="3"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_theme_autumn"/>

                    <TextView
                        android:id="@+id/store_purchase_theme_autumn"
                        style="@style/store_purchase"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <GridLayout
                        android:id="@+id/store_theme_summer_grid"
                        android:layout_width="@dimen/store_purchase_theme_dimensions"
                        android:layout_height="@dimen/store_purchase_theme_dimensions"
                        android:columnCount="3"
                        android:rowCount="3"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_theme_summer"/>

                    <TextView
                        android:id="@+id/store_purchase_theme_summer"
                        style="@style/store_purchase"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <GridLayout
                        android:id="@+id/store_theme_winter_grid"
                        android:layout_width="@dimen/store_purchase_theme_dimensions"
                        android:layout_height="@dimen/store_purchase_theme_dimensions"
                        android:columnCount="3"
                        android:rowCount="3"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_theme_winter"/>

                    <TextView
                        android:id="@+id/store_purchase_theme_winter"
                        style="@style/store_purchase"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <GridLayout
                        android:id="@+id/store_theme_royal_grid"
                        android:layout_width="@dimen/store_purchase_theme_dimensions"
                        android:layout_height="@dimen/store_purchase_theme_dimensions"
                        android:columnCount="3"
                        android:rowCount="3"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_theme_royal"/>

                    <TextView
                        android:id="@+id/store_purchase_theme_royal"
                        style="@style/store_purchase"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/divider_across"/>

            <TextView
                style="@style/store_group_title"
                android:text="@string/store_animations_title"/>

            <View
                style="@style/divider_across"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/store_animation_normal"
                        android:layout_width="@dimen/store_purchase_grid_shape_dimensions"
                        android:layout_height="@dimen/store_purchase_grid_shape_dimensions"
                        android:background="@drawable/game_square_normal"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_normal"/>

                    <TextView
                        android:id="@+id/store_purchase_animation_normal"
                        style="@style/store_purchase"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/store_animation_bounce"
                        android:layout_width="@dimen/store_purchase_grid_shape_dimensions"
                        android:layout_height="@dimen/store_purchase_grid_shape_dimensions"
                        android:background="@drawable/game_square_normal"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_bounce"/>

                    <TextView
                        android:id="@+id/store_purchase_animation_bounce"
                        style="@style/store_purchase"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/store_animation_raining"
                        android:layout_width="@dimen/store_purchase_grid_shape_dimensions"
                        android:layout_height="@dimen/store_purchase_grid_shape_dimensions"
                        android:background="@drawable/game_square_normal"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_rain"/>

                    <TextView
                        android:id="@+id/store_purchase_animation_raining"
                        style="@style/store_purchase"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/divider_across"/>

            <TextView
                style="@style/store_group_title"
                android:text="@string/store_other_title"/>

            <View
                style="@style/divider_across"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_double_coins"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        android:id="@+id/store_purchase_coin_doubler"
                        style="@style/store_purchase"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/store_container_margin"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/store_purchase_powerup_label"
                        android:text="@string/store_remove_ads"/>

                    <View
                        style="@style/divider_across"/>

                    <TextView
                        android:id="@+id/store_purchase_remove_ads"
                        style="@style/store_purchase"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>